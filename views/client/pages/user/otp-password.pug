extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)

  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Nhập mã OTP xác thự<!--[if IE]><![endif]-->
        form(
          action="/user/password/otp"
          method="POST"
        )
          
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
              value=email
              readonly
            )
          
          div(class="form-group")
            label(for="otp") Nhập mã otp
            input(
              type="password"
              class="form-control"
              id="otp"
              name="otp"
              required
            )
            
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Xác nhận
