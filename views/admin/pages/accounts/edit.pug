extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main 
  if(role.permissions.includes("accounts_edit"))

    h1(class="mb-4") Cập nhật tài khoản 

    +alert-error(5000)
    +alert-success(5000)
    
    if(roles)
      form(
        action=`${prefixAdmin}/accounts/edit/${data.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
      )
        .form-group 
          label(for="fullName") Họ tên *
          input.form-control(
            type="text"
            id="fullName"
            name="fullName"
            required 
            value=data.fullName
          )
        
        .form-group 
          label(for="email") Email *
          input.form-control(
            type="email"
            id="email"
            name="email"
            required 
            value=data.email
          )
        
        .form-group 
          label(for="password") Mật khẩu 
          //- SỬA: Bỏ required. Chỉ nhập khi muốn đổi pass
          input.form-control(
            type="password"
            id="password"
            name="password"
          )
        
        .form-group 
          label(for="phone") Số điện thoại 
          input.form-control(
            type="text"
            id="phone"
            name="phone"
            value=data.phone
          )
        
        .form-group 
          label(for="avatar") Avatar 
          input.form-control-file(
            type="file"
            id="avatar"
            name="avatar"
            accept="image/*"
            upload-image-input
          )
          //- SỬA: Thêm src để hiện ảnh cũ
          img(
            src=data.avatar
            class="image-preview"
            upload-image-preview
          )

        div(class="form-group")
          label(for="role_id") Phân quyền 
          select(name="role_id" id="role_id" class="form-control")
            option(disabled) -- Chọn --
            each item in roles 
              option(
                value=item.id
                selected=(item.id == data.role_id ? true : false)
              ) #{item.title}

        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="active"
            checked=(data.status == "active" ? true : false)
          )
          label(class="form-check-label" for="statusActive") Hoạt động 

        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusInactive"
            name="status"
            value="inactive"
            checked=(data.status == "inactive" ? true : false)
          )
          label(class="form-check-label" for="statusInactive") Dừng hoạt động 

        div(class="form-group")
          button(
            type="submit"
            class="btn btn-primary"
          ) Cập nhật
    else 
      p Vui lòng tạo nhóm quyền trước khi cập nhật tài khoản 
      p
        a(
          href=`${prefixAdmin}/roles/create`
          class="btn btn-secondary"
        ) Tạo nhóm quyền