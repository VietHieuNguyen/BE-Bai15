extends ../../layouts/auth.pug

include ../../mixins/alert.pug

block main 
  +alert-error(5000)
  .container.my-5
    .row.justify-content-center 
      .col-8 
        h1(class="text-center mb-4") Đăng nhập 
        
        form(
          action=`${prefixAdmin}/auth/login`
          method="POST"
        )
          div(class="mb-3")
            label(for="email" class="form-label") Email 
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            )
            
          div(class="mb-3")
            label(for="password" class="form-label") Mật khẩu 
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            )
            
          div(class="d-grid mt-4")
            button(
              type="submit"
              class="btn btn-primary"
            ) Đăng nhập